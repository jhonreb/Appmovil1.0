<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título de la actividad -->
    <TextView
        android:id="@+id/txtTituloDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Detalles del Gasto"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txtTituloDetalle"
        android:padding="16dp">

        <!-- Fecha del gasto -->
        <TextView
            android:id="@+id/txtFechaIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha del gasto: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descripción del gasto -->
        <TextView
            android:id="@+id/txtDescripcionIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del gasto: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Cantidad del gasto -->
        <TextView
            android:id="@+id/txtCantidadIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad del gasto: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:onClick="onClickModificar"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:onClick="onClickEliminar"/>

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:onClick="onClickRegresar"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


